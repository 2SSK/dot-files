# Mod keys
set $mod Mod4
set $alt Mod1

# Vim keys
set $left h
set $down j
set $up k
set $right l

# Fonts
font pango:JetbrainsMono Nerd Font Bold 12

# Cursor
set $cursor_theme Bibata-Modern-Ice
seat * xcursor_theme $cursor_theme 24

# Applications
set $term ghostty
set $files nautilus
set $menu --no-startup-id rofi -show drun
# set $menu --no-startup-id wofi --show drun
# set $menu fuzzel

# Gaps and Borders
gaps inner 5
gaps outer 0
default_border pixel 3
default_floating_border pixel 2

# Blur, rounded corners, and shadows
blur disable
blur_passes 3
blur_radius 3

corner_radius 4

shadows enable
shadow_offset 5 5
shadow_color #111111
shadow_inactive_color #0000004F

default_dim_inactive 0.1
for_window [app_id=".*"] opacity 1
