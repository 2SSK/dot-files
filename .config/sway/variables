# Mod keys
set $mod Mod4
set $alt Mod1

# Vim keys
set $left h
set $down j
set $up k
set $right l

# Fonts
font pango:JetbrainsMono Nerd Font Bold 12

# Cursor
set $cursor_theme Bibata-Modern-Ice
seat * xcursor_theme $cursor_theme 24

# Applications
set $term ghostty
set $files nautilus
set $menu --no-startup-id rofi -show drun

# Gaps and Borders
gaps inner 10
gaps outer 10
default_border pixel 3
default_floating_border pixel 2

# Blur, rounded corners, and shadows
blur enable
blur_passes 5
blur_radius 10

corner_radius 12

shadows enable
shadow_offset 5 5
shadow_color #0000007F
shadow_inactive_color #0000004F

default_dim_inactive 0.1
for_window [app_id=".*"] opacity 0.9
