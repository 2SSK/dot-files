{
  "$schema": "https://opencode.ai/config.json",
  "agent": {},
  "command": {
    "git": {
      "agent": "build",
      "description": "Creates a git commit message",
      "template": "Create a concise conventional commit message in plain text. Check the staging area for more information. if needed, use dashes as bullets to list multiple changes. Don't capitalize the first character."
    }
  },
  "keybinds": {
    "messages_page_down": "ctrl+d",
    "messages_page_up": "ctrl+u"
  },
  "mcp": {
    "context7": {
      "enabled": true,
      "headers": {
        "CONTEXT7_API_KEY": "{env:CONTEXT7_API_KEY}"
      },
      "type": "remote",
      "url": "https://mcp.context7.com/mcp"
    },
    "filesystem": {
      "command": [
        "npx",
        "@modelcontextprotocol/server-filesystem",
        "/home/ssk"
      ],
      "enabled": true,
      "type": "local"
    },
    "postgres": {
      "command": [
        "npx",
        "-y",
        "@henkey/postgres-mcp-server",
        "--connection-string",
        "{env:POSTGRES_DATABASE_URI}"
      ],
      "enabled": true,
      "type": "local"
    }
  },
  "plugin": ["opencode-antigravity-auth@beta"],
  "provider": {
    "ollama": {
      "models": {
        "glm-4.7": {
          "name": "glm-4.7"
        },
        "glm-4.7:cloud": {
          "_launch": true,
          "name": "glm-4.7:cloud"
        },
        "kimi-k2.5:cloud": {
          "_launch": true,
          "name": "kimi-k2.5:cloud"
        }
      },
      "name": "Ollama Cloud",
      "npm": "@ai-sdk/openai-compatible",
      "options": {
        "baseURL": "https://ollama.com/v1"
      }
    }
  },
  "theme": "tokyonight"
}

