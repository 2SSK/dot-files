[user]
    name = 2SSK
    email = 100ravsinghkarmwar@gmail.com

[commit]
    gpgSign = false
    template = ~/.config/git/template

[core]
    autocrlf = input  
    compression = 9  
    fsync = none
    whitespace = error

[advice]  # disable advices
    addEmptyPathspec = false
    pushNonFastForward = false
    statusHints = false

[blame]
    coloring = highlightRecent
    date = relative

[diff]
    context = 3  
    renames = copies 
    interHunkContext = 10

[init]
    defaultBranch = main

[log]
    abbrevCommit = true
    graphColors = blue,yellow,cyan,magenta,green,red

[status]
    branch = true
    short = true
    showStash = true
    showUntrackedFiles = all

[pager]
    branch = false
    diff = diff-so-fancy | $PAGER

[push]
    autoSetupRemote = true
    default = current 
    followTags = true 
    gpgSign = false 

[pull]
    rebase = true

[submodule]
    fetchJobs = 16

[rebase]
    autoStash = true

# Colors
[color "blame"]
    highlightRecent = black bold,1 year ago,white,1 month ago,default,7 days ago,blue

[color "branch"]
    current  = magenta
    local    = default
    remote   = yellow
    upstream = green
    plain    = blue

[color "diff"]
    meta       = black bold
    frag       = magenta
    context    = white
    whitespace = yellow reverse

[color "decorate"]
  HEAD         = red
  branch       = blue
  tag          = yellow
  remoteBranch = magenta

[interactive]
    diffFilter = diff-so-fancy --patch
    singlekey = true

# Third-party: diff-so-fancy
[diff-so-fancy]
    markEmptyLines = false

# URL shortcuts
[url "https://github.com/"]
    insteadOf = "gh:"

[url "ssh://git@git.qrator.net:2202/radar/"]
    insteadOf = "radar:"

[credential]
	helper = store

# Conditional configurations
[includeIf "gitdir:~/Code/"]
    path = ~/.config/git/personal.gitconfig

[includeIf "gitdir:~/Work/"]
    path = ~/.config/git/work.gitconfig

[url "git@github-personal:"]
    insteadOf = ghp:

[url "git@github-work:"]
    insteadOf = ghw:
[alias]
	fix-remote-personal = !git remote set-url origin $(git remote get-url origin | sed \"s|github.com|github-personal|\")
	fix-remote-work = !git remote set-url origin $(git remote get-url origin | sed \"s|github.com|github-work|\")
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
